    <div id="timetable" class="relative">
        <div class="grid grid-cols-7 border-t border-gray-200 bg-white top-0 left-0 w-full">
            <div class="p-3.5 flex items-center justify-center text-sm font-medium  text-gray-900"></div>
            {% for day in days %}
                <div class="p-3.5 flex items-center justify-center text-sm font-medium {{ day|date('M d') == "now"|date('M d') ? 'text-orange-600' : 'text-gray-900' }}">
                    {{ day|date('M d') }}
                </div>
            {% endfor %}
        </div>
        <div class="w-full grid grid-cols-7 overflow-x-auto">
            <div class="flex flex-col">
                {% for i in 7..23 %}
                    <div class="h-24 p-0.5 md:p-3.5   border-t border-r border-gray-200 flex items-start transition-all">
                        <span class="text-xs font-semibold text-gray-400">{{ i < 10 ? '0' ~ i : i }}:00</span>
                    </div>
                {% endfor %}
            </div>
            {% for eventDay in events %}
                <div class="flex flex-col">
                    {% for j in 7..23 %}
                        {% for k in [0, 15, 30, 45] %}
                            <div class="h-6 p-0.5 {{ k == 0 or k == 30 ? 'border-t' : '' }} border-r border-gray-200 transition-all  relative">
                                {% set event = (eventDay|filter(a =>
                                    (a.start_date / 1000)|date('H') == j and
                                    (a.start_date / 1000)|date('i') == k))|first %}

                                {% if event %}
                                    {% set height = (event.end_date / 1000 - event.start_date / 1000) / 60 / 15 * 6 %}
                                    <div class="rounded h-{{ height }} p-1.5 border-l-2 border-purple-600 bg-purple-50 w-full absolute top-0 left-0 z-30">
                                        <p class="text-xs font-normal text-gray-900 mb-px">{{ event.name }}</p>
                                        <p class="text-xs font-semibold text-purple-600">
                                            {{ (event.start_date / 1000)|date('H:i') }}
                                            - {{ (event.end_date / 1000)|date('H:i') }}
                                        </p>
                                    </div>
                                {% endif %}
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
            {% endfor %}
            {% if events|length < 6 %}
                {% for i in 0..events|length - 5 %}
                    <div class="flex flex-col">
                        {% for j in 7..23 %}
                            {% for k in [0, 15, 30, 45] %}
                                <div class="h-6 p-0.5 {{ k == 0 or k == 30 ? 'border-t' : '' }} border-r border-gray-200 transition-all relative">
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>

    <div id="timetable-loading" class="w-full flex-grow hidden flex flex-col gap-3 items-center justify-center">
