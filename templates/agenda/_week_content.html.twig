    </div>
</turbo-frame>

{% block javascripts %}
    <script>
        document.addEventListener('turbo:before-fetch-request', function (event) {
            if (event.target.id === 'agenda-content') {
                document.getElementById('timetable').classList.toggle('hidden');
                document.getElementById('timetable-loading').classList.toggle('hidden');
            }
        });

    </script>
{% endblock %}
