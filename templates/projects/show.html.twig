{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <main class="h-full w-full flex items-center">
        <twig:Sidebar/>

        <section class="h-full flex-grow pt-8 px-8 ml-[320px]">
            <div class="flex items-center gap-2">
                <a href="#" class="rounded-md p-1 hover:bg-secondary">
                    <svg class="h-5 w-5 text-quarternary" width="24" height="24" viewBox="0 0 24 24" fill="none"
                         xmlns="http://www.w3.org/2000/svg">
                        <path d="M8 17H16M11.0177 2.764L4.23539 8.03912C3.78202 8.39175 3.55534 8.56806 3.39203 8.78886C3.24737 8.98444 3.1396 9.20478 3.07403 9.43905C3 9.70352 3 9.9907 3 10.5651V17.8C3 18.9201 3 19.4801 3.21799 19.908C3.40973 20.2843 3.71569 20.5903 4.09202 20.782C4.51984 21 5.07989 21 6.2 21H17.8C18.9201 21 19.4802 21 19.908 20.782C20.2843 20.5903 20.5903 20.2843 20.782 19.908C21 19.4801 21 18.9201 21 17.8V10.5651C21 9.9907 21 9.70352 20.926 9.43905C20.8604 9.20478 20.7526 8.98444 20.608 8.78886C20.4447 8.56806 20.218 8.39175 19.7646 8.03913L12.9823 2.764C12.631 2.49075 12.4553 2.35412 12.2613 2.3016C12.0902 2.25526 11.9098 2.25526 11.7387 2.3016C11.5447 2.35412 11.369 2.49075 11.0177 2.764Z"
                              stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </a>
                <svg class="h-4 w-4 text-senary" width="24" height="24" viewBox="0 0 24 24" fill="none"
                     xmlns="http://www.w3.org/2000/svg">
                    <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                          stroke-linejoin="round"/>
                </svg>
                <a class="px-2 py-1 rounded-md hover:bg-secondary text-tertiary text-sm"
                   href="{{ path('app_projects') }}">
                    Projects
                </a>
                <svg class="h-4 w-4 text-senary" width="24" height="24" viewBox="0 0 24 24" fill="none"
                     xmlns="http://www.w3.org/2000/svg">
                    <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                          stroke-linejoin="round"/>
                </svg>
                <a class="px-2 py-1 rounded-md hover:bg-secondary text-secondary font-semibold text-sm"
                   href="{{ path('app_projects_show', { id: project.id }) }}">
                    {{ project.name }}
                </a>
            </div>
            <div class="mt-6">
                <h1 class="text-primary font-semibold text-3xl">{{ project.name }}</h1>
            </div>
            <div class="bg-secondary rounded-[10px] mt-6 border border-secondary p-1 flex gap-1 w-full">
                <div class="bg-white rounded-md px-3 py-2 flex gap-2 items-center justify-center custom-shadow-sm">
                    <p class="text-secondary font-semibold text-sm">Overview</p>
                </div>
                <div class="rounded-md px-3 py-2 flex gap-2 items-center justify-center">
                    <p class="text-quarternary text-sm">Messages</p>
                    <span class="py-0.5 px-2 rounded-full border border-secondary text-xs text-secondary">2</span>
                </div>
            </div>

            <section class="flex mt-8 gap-16">
                <section class="w-2/3">
                    <div class="flex">
                        <div class="space-y-1">
                            <h2 class="text-primary font-semibold text-lg">Project overview</h2>
                            <p class="text-tertiary font-normal text-sm">A overview of the project, goals and outcomes.</p>
                        </div>
                    </div>
                    <div class="mt-6 w-2/3">
                        <p class="text-tertiary">{{ project.description }}</p>
                    </div>
                </section>
                <section class="w-1/3 rounded-2xl border border-secondary p-6 space-y-6">
                    <div class="flex pb-5 border-b border-secondary">
                        <h2 class="text-primary font-semibold text-lg">Recent activity</h2>
                    </div>
                    <div class="flex gap-3 items-center w-full">
                        <div class="relative">
                            <div class="rounded-full bg-secondary flex items-center justify-center h-12 w-12">NL</div>
                            <div class="absolute bottom-0 right-0 bg-green-600 border-2 border-white h-3 w-3 rounded-full"></div>
                        </div>
                        <div class="space-y-px flex-grow">
                            <div class="flex gap-2 items-center relative">
                                <p class="text-secondary font-medium text-sm">Nassim LOUNADI</p>
                                <p class="text-tertiary text-xs">Just now</p>
                                <div class="absolute top-0 right-0 bg-green-600 rounded-full h-2.5 w-2.5"></div>
                            </div>
                            <p class="text-tertiary text-sm font-normal">
                                Added a file to <span class="text-orange-700 font-medium">{{ project.name }}</span>
                            </p>
                        </div>
                    </div>
                </section>
            </section>
        </section>
    </main>
{% endblock %}
